@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "UserList";
}

@section Header
{
    <nav class="navbar navbar-expand-sm" style="background-color: black;">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item ">
                <h4 class="text-white">@Html.ActionLink("Home", "Index", "Home", null, new {style = @"text-decoration:none;", @class = "text-white"})</h4>
            </li>
        </ul>
        @Html.Partial("~/Views/Shared/_UserState.cshtml")

    </nav>
    <br>
    <div class="container" name="onlineLibraryLogo">
        <div class="row text-center">
            <div class="col-md-12 col-sm-12 ">
                <h1 class="display-1">Librarian Panel</h1>
            </div>
        </div>
    </div>

    @if (Request.IsAuthenticated)
    {
        @Html.Action("CheckUserBanStatus", "Loan", new {userId = User.Identity.GetUserId()})
    }
}

@section Body
{
   

    <div class="container">
        <div class="border rounded">
            <div class="tab">
                <button class="tablinks" onclick="openTab(event, 'Books')">Books</button>
                <button class="tablinks" onclick="openTab(event, 'Tags')">Tags</button>
                <button class="tablinks" onclick="openTab(event, 'Librarians')">Librarians</button>
            </div>
            <div id="Books" class="tabcontent">
                @Html.Partial("_BooksTab")
            </div>
            <div id="Tags" class="tabcontent">
                @Html.Partial("_TagsTab")
            </div>
            <div id="Librarians" class="tabcontent">
@*                @Html.Partial("_LibrarianTab")*@
            </div>
            
        </div>
    </div>
    



    <h2>UserList</h2>
    
    <!-- Nav tabs -->

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="#librarian-tab" role="tab" data-toggle="tab" id="tab-users">Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#librarian-tab" role="tab" data-toggle="tab" id="tab-tags">Tags</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#librarian-tab" role="tab" data-toggle="tab" id="tab-books">Books</a>
        </li>
    </ul>

    <!-- Tab pane -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="LibrarianTab">...</div>
        <div id="librarian-tab">
            
        </div>
    </div>

        <script>

            $(function () {

                function myfunc() {
                    $("#librarian-tab").load("Librarian/Users/");
                }
                $("#tab-users").click(
                    function () {
                        myfunc();
                    }
                )

                $("#tab-tags").click(
                    function () {
                        $("#librarian-tab").load("librarian/Tags/");
                    });

                $("#tab-books").click(
                    function () {
                        $("#librarian-tab").load("Librarian/Books/");
                    });
                myfunc();

            })

        </script>

}

    <style>
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

        /* Style the buttons inside the tab */

        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

        /* Change background color of buttons on hover */

        .tab button:hover { background-color: #ddd; }

        /* Create an active/current tablink class */

        .tab button.active { background-color: #ccc; }

        /* Style the tab content */

        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }
    </style>