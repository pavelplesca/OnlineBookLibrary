@using OnlineLibrary.Models
@model ICollection<Loan>

<div class="container">
    <br />
    <h2>Loaned books</h2>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Status</th>
                <th>Borrow Date</th>
                <th>Due Date</th>
                <th>Date Returned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <th>@loan.Book.Name</th>
                    <th>@loan.Status.ToString()</th>
                    <th>@loan.BorrowDate</th>
                    <th>@loan.DueDate</th>
                    <th>@loan.ReturnedDate</th>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
